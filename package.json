{
	"name": "plato",
	"description": "Plato Boilerplate",
	"version": "0.0.2",
	"private": true,
	"author": "Tim Roussilhe",
	"contributors": [
		"Tim Roussilhe"
	],
	"type": "module",
	"scripts": {
		"start": "npm run clean &&  node plato develop -v -o",
		"dev-plato": "tsc -w --project ./plato/tsconfig.json",
		"build-plato": "tsc --project ./plato/tsconfig.json",
		"dev": "node plato-dist develop -v",
		"develop": "node plato-dist develop -v",
		"serve": "webpack-dev-server --config ./config/webpack.dev.config.js",
		"build": "npm run build-plato && node plato-dist build -v",
		"build-and-test": "node plato-dist build -v -o",
		"bundleSizeAnalyser": "webpack --config ./config/webpack.prod.config.js --env bundleSize",
		"prettier:check": "prettier --config ./.prettierrc --check src/**/**.{js,scss}",
		"prettier:write": "prettier --config ./.prettierrc --write src/**/**.{js,scss}"
	},
	"devDependencies": {
		"@babel/core": "^7.18.10",
		"@babel/eslint-parser": "^7.18.9",
		"@babel/plugin-syntax-dynamic-import": "^7.2.0",
		"@babel/plugin-transform-runtime": "^7.18.10",
		"@babel/preset-env": "^7.18.10",
		"@types/node": "^18.7.2",
		"@vercel/ncc": "^0.34.0",
		"art-template-loader": "^1.4.3",
		"autoprefixer": "^10.4.8",
		"babel-loader": "^8.2.5",
		"babel-plugin-minify-dead-code-elimination": "^0.5.2",
		"boxen": "^4.1.0",
		"commander": "^2.19.0",
		"connect": "^3.7.0",
		"convert-hrtime": "^2.0.0",
		"critical": "^4.0.1",
		"css-loader": "^6.7.1",
		"css-minimizer-webpack-plugin": "^4.0.0",
		"eslint": "^8.21.0",
		"eslint-config-google": "^0.14.0",
		"fs-extra": "^10.1.0",
		"gsap": "^3.10.4",
		"html-minifier": "^3.5.21",
		"mini-css-extract-plugin": "^2.6.1",
		"node-fetch": "^2.3.0",
		"opn": "^5.4.0",
		"page": "^1.11.6",
		"postcss-loader": "^7.0.1",
		"prettier": "^2.7.1",
		"sass": "^1.54.0",
		"sass-loader": "^13.0.2",
		"serve-static": "^1.14.1",
		"size-plugin": "2.0.2",
		"style-loader": "^3.3.1",
		"terminal-link": "^2.0.0",
		"terser-webpack-plugin": "^5.3.3",
		"ts-node": "^10.9.1",
		"webpack": "^5.74.0",
		"webpack-bundle-analyzer": "^4.5.0",
		"webpack-bundle-size-analyzer": "^3.1.0",
		"webpack-cli": "^4.10.0",
		"webpack-dev-server": "^4.9.3",
		"webpack-manifest-plugin": "^5.0.0"
	},
	"dependencies": {
		"@babel/runtime": "^7.18.9",
		"art-template": "^4.13.2",
		"core-js": "^3.24.1",
		"eslint-config-prettier": "^6.3.0"
	}
}
